# Required
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/surf_tracker
SECRET_KEY=change-me

# Admin bootstrap token for CLI script
# Set to a strong random value; used by app/scripts/create_admin.py
ADMIN_BOOTSTRAP_TOKEN=generate-a-secure-token

# Optional tunables
ACCESS_TOKEN_EXPIRE_MINUTES=30
ACCESS_TOKEN_EXPIRE_DAYS_REMEMBER_ME=30
ECHO_SQL=true
POOL_SIZE=10
MAX_OVERFLOW=20
